<?xml version="1.0" encoding="utf-8"?>

<xs:schema id="DTC" 
           version="1.0" 
           xml:lang="en-us"
           targetNamespace="Falcon:Core:IO:Schemas"
           elementFormDefault="qualified"
           xmlns="Falcon:Core:IO:Schemas"
           xmlns:mstns="http://tempuri.org/DTC.xsd"
